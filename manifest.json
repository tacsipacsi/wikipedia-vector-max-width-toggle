{
	"manifest_version": 2,
	"browser_specific_settings": {
		"gecko": {
			"id": "vector-max-width-toggle@wikipedia.org",
			"strict_min_version": "42.0"
		}
	},
	"name": "__MSG_extensionName__",
	"description": "__MSG_extensionDescription__",
	"icons": {
		"48": "icon.svg",
		"96": "icon.svg"
	},
	"version": "0.1",
	"default_locale": "en",
	"background": {
		"scripts": [ "background.js" ]
	},
	"content_scripts": [
		{
			"matches": [ "<all_urls>" ],
			"js": [ "content.js" ]
		}
	],
	"page_action": {
		"default_title": "__MSG_pageActionTooltip__",
		"default_icon": "icon.svg"
	},
	"commands": {
		"_execute_page_action": {}
	},
	"options_ui": {
		"page": "settings.html",
		"browser_style": true
	},
	"permissions": [
		"storage",
		"*://*.wikipedia.org/*"
	]
}
